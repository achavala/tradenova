# Alpaca API Credentials (Paper Trading)
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Trading Configuration
INITIAL_BALANCE=10000
MAX_ACTIVE_TRADES=10
POSITION_SIZE_PCT=0.50
STOP_LOSS_PCT=0.15

# Profit Targets
TP1_PCT=0.40
TP1_EXIT_PCT=0.50
TP2_PCT=0.60
TP2_EXIT_PCT=0.20
TP3_PCT=1.00
TP3_EXIT_PCT=0.10
TP4_PCT=1.50
TP4_EXIT_PCT=0.10
TP5_PCT=2.00
TP5_EXIT_PCT=1.00

# Trailing Stop
TRAILING_STOP_ACTIVATION_PCT=1.50
TRAILING_STOP_MIN_PROFIT_PCT=1.00

# Logging
LOG_LEVEL=INFO

# ============================================
# ALERT CONFIGURATION (New)
# ============================================

# Email Alerts (for Gmail, use App Password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=your_email@gmail.com

# Slack Alerts (Optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#trading-alerts

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alert Behavior
ALERT_COOLDOWN_MINUTES=30
ENABLE_MACOS_NOTIFICATIONS=true
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false
ENABLE_TELEGRAM_ALERTS=false

# Alert Thresholds
ERROR_THRESHOLD_PER_HOUR=100
STALE_LOG_THRESHOLD_MINUTES=10
DAILY_LOSS_THRESHOLD_PCT=5.0
